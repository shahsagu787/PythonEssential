list1=[(1,2), (3,4), (5,6),(4,5)]
list2=[]
i=0

for each in list1:
    list2.append(list1[i][0]+list1[i][1])
    i=i+1

print(list2)







print("Day 7 ---> Assignment 3\n")


ls1=[(1,2,3), [1,2], ['a','hit','less']]
ls2=[]

for i in ls1:
    for j in range(len(i)):
        j=i[j]
        ls2.append(j)

print(ls2)
