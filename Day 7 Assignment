print("Day 7 ---> Assignment 1 \n")

port1 = {21: "FTP", 22:"SSH", 23: "telnet", 80: "http"}
l1=[]
l2=[]
print(port1)

for i in port1.keys():
    l1.append(i)
for j in port1.values():
    l2.append(j)

dict2=dict((zip(l2,l1)))
print(dict2)






